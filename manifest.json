{
   "name": "ban-harry",
   "version": "0.1",
   "description": "turns harry potter into the loser he is",
   "permissions": ["storage"],
   "page_action": {
     "default_icon": {
        "16": "images/icon16.png",
        "32": "images/icon32.png",
        "48": "images/icon48.png",
        "128": "images/icon128.png"
      }
   },
   "content_scripts": [
    {
        "matches": [
            "http://*/*",
            "https://*/*"
        ],
        "js": [
            "content.js"
        ],
        "run_at": "document_end"
    }
  ],
   "icons": {
      "16": "images/icon16.png",
      "32": "images/icon32.png",
      "48": "images/icon48.png",
      "128": "images/icon128.png"
    },
   "manifest_version": 2
 }
